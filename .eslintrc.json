{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "@typescript-eslint",
    "no-optional-chaining"
  ],
  "rules": {
    "no-optional-chaining/no-optional-chaining": ["warn", {
      "disallowChainedMethods": true
    }]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "*.config.js",
    "*.config.ts",
    "drizzle/"
  ]
}
